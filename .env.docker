# Archivo de variables de entorno para Docker
# Copia este archivo a .env y ajusta los valores según tu entorno

APP_NAME="Master Color API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Lima
APP_URL=http://localhost:8000
APP_FRONTEND_URL=http://localhost:5173

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Configuración de PHP
PHP_CLI_SERVER_WORKERS=4

# Configuración de logging
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración de base de datos para Docker
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=master_color_api
DB_USERNAME=laravel
DB_PASSWORD=password
DB_ROOT_PASSWORD=root_password

# Configuración de sesiones y cache para Docker
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Configuración de cache para Docker
CACHE_STORE=redis
CACHE_PREFIX=

# Configuración de Redis para Docker
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuración de mail para Docker (usando Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@mastercolor.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración de AWS (si se usa)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuración de MercadoPago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_SANDBOX=true

# Configuración de JWT
JWT_SECRET=
JWT_ALGO=HS256

# Configuración de Vite para Docker
VITE_APP_NAME="${APP_NAME}"